<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.25dp"
        android:layout_marginBottom="1.25dp">

        <LinearLayout
            android:id="@+id/categoryrow_box1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="1.25dp"
            android:background="@drawable/box_background"
            android:padding="20dp"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/categoryrow_image1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/categoryrow_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoryname_placeholder"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryrow_box2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="1.25dp"
            android:background="@drawable/box_background"
            android:padding="20dp"
            android:onClick="onClick">

            <ImageView
                android:id="@+id/categoryrow_image2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/categoryrow_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoryname_placeholder"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>